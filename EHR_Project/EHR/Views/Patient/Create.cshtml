@model Patient
<h4>Add new patient</h4>

<form method="post" asp-controller="Patient" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" name="Id" id="Id" type="hidden" />
    <div class="row">
        <div class="col-md-6">
            <label>First name</label>
            <input class="form-control" asp-for="FirstName" name="FirstName" id="FirstName" placeholder="please enter first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>

        <div class="col-md-6">
            <label>Last name</label>
            <input class="form-control" asp-for="LastName" name="LastName" id="LastName" placeholder="please enter last name" />            
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    
    <div class="row mt-1">
        <div class="col-md-6">
            <label>Gender</label>
            <select asp-for="Gender" class="form-control" name="Gender" id="Gender">
                <option value="">Please select</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>           
            <span asp-validation-for="Gender" class="text-danger"></span>

        </div>
        
        <div class="col-md-6">
            <label>Date Of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" name="DateOfBirth" id="DateOfBirth" placeholder="please enter dob" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div> 
       

    </div>  
    <row class="btn-group mt-1 float-sm-end">
        <a asp-action="Index" class="btn bbtn-sm btn-secondary">Back</a>

        <button type="submit" asp-controller="Patient" asp-action="Create" class="btn btn-primary" name="Submit">
            Submit
        </button>
   </row>

</form>